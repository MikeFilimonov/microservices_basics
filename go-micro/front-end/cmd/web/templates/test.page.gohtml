{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="brokerBtn" class="btn btn-outline-secondary" href="javascript:void(0);">Test AMQP broker</a>

                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
      
      let brokerBtn = document.getElementById("brokerBtn");
      let output = document.getElementById("output");
      let sentData = document.getElementById("payload");
      let receivedData = document.getElementById("received");

      brokerBtn.addEventListener("click", function(){

        const body = {
            method: "POST",
        }

       const indentsOption = 4;

        fetch("http:\/\/localhost:8081", body)
        .then((response) => response.json())
        .then((data) => {
            sentData.innerHTML = "empty POST request";
            receivedData.innerHTML = JSON.stringify(data, undefined, indentsOption)

            if (data.error){
                console.log(data.error)
            }else{
                output.innerHTML += `<br><strong> Response from the AMQP-service</strong>: ${data.payload}`;
            }
        })
        .catch((error) => {
            output.innerHTML += "<br><br>Error: " + error;
        })

      })

    </script>
{{end}}
